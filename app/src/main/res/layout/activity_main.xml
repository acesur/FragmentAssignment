<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="436dp"
        android:layout_height="123dp">

        <Button
            android:id="@+id/btnSum"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sum" />

        <Button
            android:id="@+id/btnArea"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Area of Circle" />


        <Button
            android:id="@+id/btnAutomorphic"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="Automorphic" />

        <Button
            android:id="@+id/btnReverseString"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Reverse String" />

        <Button
            android:id="@+id/btnReverseNum"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Reverse Number" />

        <Button
            android:id="@+id/btnPalindrome"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="Palindrome" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"/>

</LinearLayout>